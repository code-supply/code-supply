<h1>Log in</h1>

<%= form_for @conn, Routes.user_session_path(@conn, :create), [as: :user, class: "standard-w"], fn f -> %>
  <%= if @error_message do %>
    <div class="alert alert-danger">
      <p><%= @error_message %></p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :email %>
    <%= email_input f, :email, required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= label f, :password %>
    <%= password_input f, :password, required: true %>
  </div>

  <div class="pt-4">
    <%= checkbox f, :remember_me %>
    <%= label f, :remember_me, "Keep me logged in for 60 days", class: "pl-1" %>
  </div>

  <div>
    <%= submit "Log in", class: "btn btn-spaced" %>
  </div>
<% end %>

<p>
  <%= link "Register", to: Routes.user_registration_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new) %>
</p>

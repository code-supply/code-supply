#!/usr/bin/env bash

set -e

id="$(docker build --quiet .)"
secret="$(mix phx.gen.secret)"

docker run \
    --network host \
    --env ACCESS_KEY_ID="hosting-dev@code-supply.iam.gserviceaccount.com" \
    --env BUCKET_NAME=hosting-uploads-dev \
    --env GOOGLE_SERVICE_ACCOUNT_JSON="$GOOGLE_SERVICE_ACCOUNT_JSON" \
    --env SENDGRID_API_KEY=asdf \
    --env ID_SALT=asdf \
    --env SECRET_KEY_BASE="$secret" \
    --env DATABASE_URL=ecto://postgres:postgres@localhost/hosting_dev \
    "$id"
